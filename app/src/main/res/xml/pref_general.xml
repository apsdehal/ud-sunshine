<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_general_location_default_value"
        android:inputType="textCapWords"
        android:key="@string/pref_general_location_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_general_location_title" />
    <ListPreference
        android:defaultValue="@string/pref_unit_metric"
        android:key="@string/pref_unit_key"
        android:title="@string/pref_unit_title"
        android:entries="@array/pref_units_options"
        android:entryValues="@array/pref_units_values">
    </ListPreference>


</PreferenceScreen>
